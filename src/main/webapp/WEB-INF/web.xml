<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">

	<listener>
	  <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	
	<context-param>
	    <param-name>contextInitializerClasses</param-name>
	    <param-value>net.ex337.scriptus.config.ScriptusConfig</param-value>
	</context-param>

	<!-- TODO: Add <servlet> tags for each servlet here. -->
	
	<servlet>
		<servlet-name>scripts</servlet-name>
		<servlet-class>net.ex337.scriptus.server.frontend.auth.ScriptsServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>processes</servlet-name>
		<servlet-class>net.ex337.scriptus.server.frontend.auth.ProcessAdminServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>logs</servlet-name>
		<servlet-class>net.ex337.scriptus.server.frontend.auth.LogsServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>settings</servlet-name>
		<servlet-class>net.ex337.scriptus.server.frontend.auth.SettingsServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>you</servlet-name>
		<servlet-class>net.ex337.scriptus.server.frontend.auth.YouServlet</servlet-class>
	</servlet>
		
	<servlet>
		<servlet-name>home</servlet-name>
		<servlet-class>net.ex337.scriptus.server.frontend.auth.HomeServlet</servlet-class>

	</servlet>
		
	<servlet>
		<servlet-name>connect</servlet-name>
		<servlet-class>net.ex337.scriptus.server.frontend.auth.ConnectServlet</servlet-class>
	</servlet>
		
	<servlet>
		<servlet-name>connectTwitter</servlet-name>
		<servlet-class>net.ex337.scriptus.server.frontend.auth.TwitterConnectionServlet</servlet-class>
	</servlet>
		
	<!-- TODO: Add <servlet-mapping> tags for each <servlet> here. -->
	
	<servlet-mapping>
		<servlet-name>scripts</servlet-name>
		<url-pattern>/scripts/*</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>processes</servlet-name>
		<url-pattern>/processes/list</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>logs</servlet-name>
		<url-pattern>/processes/logs</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>settings</servlet-name>
		<url-pattern>/settings</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>you</servlet-name>
		<url-pattern>/you</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>home</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>connect</servlet-name>
		<url-pattern>/connect</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>connectTwitter</servlet-name>
		<url-pattern>/connect/twitter</url-pattern>
	</servlet-mapping>
	
	<!-- TODO: Optionally add a <welcome-file-list> tag to display a welcome file. -->
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
</web-app>
